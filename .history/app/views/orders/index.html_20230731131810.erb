<h1>All Orders</h1>

<% if @orders.empty? %>
  <p>No orders found.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Order Date</th>
        <th>Customer Name</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.date %></td>
          <td><%= order.customer.name %></td>
          <td><%= number_to_currency(order.total_amount) %></td>
          <td><%= order.status.capitalize %></td>
          <td><%= link_to "View Details", order_path(order) %></td>
        </tr>
        <!-- Display order items for the current order -->
        <tr>
          <td colspan="5"> <!-- Span the entire row -->
            <table>
              <thead>
                <tr>
                  <th>Book</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% order.order_items.each do |item| %>
                  <tr>
                    <td><%= item.book.name %></td>
                    <td><%= number_to_currency(item.price) %></td>
                    <td><%= item.quantity %></td>
                    <td><%= number_to_currency(item.price * item.quantity) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <!-- Display GST, PST, and HST for the current order -->
            <p>GST: <%= number_to_currency(order.gst) %></p>
            <p>PST: <%= number_to_currency(order.pst) %></p>
            <p>HST: <%= number_to_currency(order.hst) %></p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
