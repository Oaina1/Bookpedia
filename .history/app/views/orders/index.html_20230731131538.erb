<h1>All Orders</h1>

<% if @orders.empty? %>
  <p>No orders found.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Order Date</th>
        <th>Customer Name</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.date %></td>
          <td><%= order.customer.name %></td>
          <td><%= number_to_currency(order.total_amount) %></td>
          <td><%= order.status.capitalize %></td>
          <td><%= link_to "View Details", order_path(order) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
