<h1>Guest Checkout</h1>

<%=  save_guest_address_path, method: :post do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :address %>
  <%= form.text_area :address %>

  <%= form.label :province %>
  <%= form.select :province_id, options_for_select(Province.all.map { |p| [p.name, p.id] }) %>

  <%= form.submit "Save Address" %>
<% end %>