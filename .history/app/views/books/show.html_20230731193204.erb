<!-- app/views/books/show.html.erb -->
<div class="book-details">
  <% if @book.image.attached? %>
    <%= image_tag @book.image, class: "book-image" %>
  <% else %>
    <p class="has-text-centered">No image available</p>
  <% end %>
  <h1 class="title is-3"><%= @book.name %></h1>
  <p><strong>Author:</strong> <%= @book.author %></p>
  <p><strong>Genre:</strong> <%= @book.genre.name %></p>
  <p><strong>Publisher:</strong> <%= @book.publisher %></p>
  <p><strong>Price:</strong> <%= number_to_currency(@book.price) %></p>
  <% if @book.on_sale? %>
    <p><strong>On Sale</strong></p>
  <% end %>
  <%= form_tag add_to_cart_path(@book), method: :post, class: "add-to-cart-form" do %>
    <%= hidden_field_tag :book_id, @book.id %>
    <%= submit_tag 'Add to Cart', class: "button is-primary" %>
  <% end %>
</div>
